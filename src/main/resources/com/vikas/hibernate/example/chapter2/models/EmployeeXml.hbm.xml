<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.vikas.hibernate.example.chapter2.recipe2.EmployeeXml" table="Employee_xml">
    	<composite-id>
    		<key-property name="department" type="string" column="department"></key-property>
    		<key-property name="idCard" type="string" column="idCard"></key-property>
    	</composite-id>
    	<property name="name" type="string" column="NAME"></property>
    </class>
</hibernate-mapping>