<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="connection.driver_class">com.microsoft.sqlserver.jdbc.SQLServerDriver</property>
		<property name="connection.url">jdbc:sqlserver://localhost:1433;databaseName=OrganicDatabase;integratedSecurity=true</property>
		<property name="connection.username">sa</property>
		<property name="connection.password">system</property>
		<property name="hibernate.dialect"> org.hibernate.dialect.SQLServerDialect</property>
		<property name="hibernate.show_sql">true</property>
		<property name="hibernate.hbm2ddl.auto">create</property>
		<property name="hibernate.generate_statistics">true</property>
		<mapping
			class="com.vikas.hibernate.example.chapter4.recipe0.Disc" />
		<mapping
			class="com.vikas.hibernate.example.chapter4.recipe0.AudioDisc" />
		<mapping
			class="com.vikas.hibernate.example.chapter4.recipe0.VideoDisc" />
		<mapping
			class="com.vikas.hibernate.example.chapter4.recipe0.Disc2" />
		<mapping
			class="com.vikas.hibernate.example.chapter4.recipe0.AudioDisc2" />
		<mapping
			class="com.vikas.hibernate.example.chapter4.recipe0.VideoDisc2" />
		<mapping
			class="com.vikas.hibernate.example.chapter4.recipe0.Disc3" />
		<mapping
			class="com.vikas.hibernate.example.chapter4.recipe0.AudioDisc3" />
		<mapping
			class="com.vikas.hibernate.example.chapter4.recipe0.VideoDisc3" />
		<mapping
			class="com.vikas.hibernate.example.chapter4.recipe0.Disc4" />
		<mapping
			class="com.vikas.hibernate.example.chapter4.recipe0.AudioDisc4" />
		<mapping
			class="com.vikas.hibernate.example.chapter4.recipe0.VideoDisc4" />
	</session-factory>
</hibernate-configuration>